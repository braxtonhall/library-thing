{
	"name": "Better LibraryThing",
	"version": "0.0.1",
	"manifest_version": 3,
	"description": "Makes LibraryThing BETTER",
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.librarything.com/*"
			],
			"js": [
				"js/copy.js",
				"js/warning.js",
				"js/colour.js",
				"js/pdf.js",
				"js/emitter.js"
			]
		}
	],
	"content_security_policy": {},
	"host_permissions": [
		"https://*.librarything.com/*",
		"https://*.b-ok.cc/*",
		"https://*.libgen.is/*"
	],
	"background": {
		"service_worker": "js/background.js"
	},
	"permissions": ["tabs"],
	"web_accessible_resources": [
		{
			"resources": [
				"img/icon128.png",
				"img/favicon.ico"
			],
			"matches": [
				"https://*.librarything.com/*"
			]
		}
	]
}
